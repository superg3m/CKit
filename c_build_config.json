{
    "c_build_version" : "0.8",

    "$project_name" : "ckit",

    "$debug_with_visual_studio" : false,
    "should_rebuild_project_dependencies" : false,

    "std_version" : "c11",
    "project_dependencies" : ["ckg"],

    "./build_cl" : {
        "$output_name" : "ckit.lib",
        "$compile_time_defines" : "",
        "$include_paths" : "",
